<Window x:Class="CustomWPF.NuevoSocio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Socio" Height="195" Width="369" WindowStartupLocation="CenterScreen" Background="#FF0A0A0A" Foreground="#FFDADADA">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Nombre:" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18"/>
        <TextBox x:Name="txtNombre" Grid.Row="0" Margin="134,2,35,11" Width="180" TextChanged="txtNombre_TextChanged" Background="White"/>

        <Label Content="Mail:" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontFamily="Segoe UI Semibold" FontSize="18" />
        <TextBox x:Name="txtEmail" Margin="134,5,35,12" Width="180" TextChanged="txtEmail_TextChanged" Grid.Row="1" Background="White"/>

        <Label Content="ID:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="18" Margin="2,0,0,0" />
        <TextBox x:Name="txtID" Grid.Row="2" Margin="134,4,35,11" Width="180" BorderBrush="#FFB7B7B7" Foreground="Black" SelectionBrush="#FF44BBF9" Background="White"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnGuardar" Content="Guardar" Width="100" Margin="0,0,15,0" Click="btnGuardar_Click" FontFamily="Arial Black"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="100" Click="btnCancelar_Click" FontFamily="Segoe UI Black"/>
        </StackPanel>

    </Grid>
</Window>


<Window x:Class="CustomWPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomWPF"
        mc:Ignorable="d"
        Title="Register" Height="519" Width="347">
    <Window.Resources>
        <!-- Material Design Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="Black"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#FF23C559"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="OnSurfaceColor" Color="#212121"/>
        <SolidColorBrush x:Key="OnSurfaceMediumColor" Color="#757575"/>

        <!-- Material Design TextBox Style -->
        <Style x:Key="MaterialTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,16,12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                      Padding="{TemplateBinding Padding}"
                                      VerticalAlignment="Bottom"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design PasswordBox Style -->
        <Style x:Key="MaterialPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,16,12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                      Padding="{TemplateBinding Padding}"
                                      VerticalAlignment="Bottom"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design Button Style -->
        <Style x:Key="MaterialButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                             Background="{TemplateBinding Background}"
                             CornerRadius="4"
                             BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.4" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design Outlined Button Style -->
        <Style x:Key="MaterialOutlinedButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                             Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D211"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Button Style -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F1707A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <!-- Main Card Container -->
    <Border CornerRadius="8" Margin="24,24,10,6">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.2" BlurRadius="16"/>
        </Border.Effect>

        <Grid Background="{StaticResource SurfaceColor}" Margin="-10,-10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="120"/>
                <RowDefinition/>
                <RowDefinition Height="193.04"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Grid Background="{StaticResource PrimaryColor}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Margin="-10,-24,-9,108" Grid.RowSpan="2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnMinimize" 
                        Style="{StaticResource WindowButton}"
                        Content="&#xE921;" 
                        Click="btnMinimize_Click" 
                        ToolTip="Minimizar"/>
                    <Button x:Name="btnClose" 
                        Style="{StaticResource CloseButton}"
                        Content="&#xE8BB;" 
                        Click="btnClose_Click" 
                        ToolTip="Cerrar"/>
                </StackPanel>
            </Grid>



            <!-- Header -->
            <Grid Grid.Row="1" Background="{StaticResource PrimaryColor}" Margin="0,0,0,120">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="209*"/>
                    <ColumnDefinition Width="193*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="123,0,0,0">
                    <TextBlock Text="Bienvenido" 
                           FontSize="28" 
                           FontWeight="Light" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,4"/>
                    <TextBlock Text="Inicia sesión en tu cuenta" 
                           FontSize="14" 
                           Foreground="#FF88887C" 
                           HorizontalAlignment="Center"/>
                </StackPanel>
                <Image Width="200" Source="/Image/pearphoto.png" RenderTransformOrigin="0.485,1.1" Height="50" Grid.ColumnSpan="2" Margin="101,-18,101,102"/>
            </Grid>

            <!-- Form Content -->
            <StackPanel Grid.Row="1" Margin="48,70,48,0" VerticalAlignment="Top" Height="217" Grid.RowSpan="3">
                <!-- Usuario -->
                <Grid Margin="0,0,0,24">
                    <TextBox x:Name="txtUsuario" 
                          Style="{StaticResource MaterialTextBox}"
                          Background="#FAFAFA"/>
                    <TextBlock Text="Usuario" 
                           FontSize="12" 
                           Foreground="{StaticResource OnSurfaceMediumColor}" 
                           Margin="0,4,12,4" 
                           IsHitTestVisible="False"/>
                </Grid>


                <Grid Margin="0,0,0,24">
                    <TextBox x:Name="txtEmail" 
          Style="{StaticResource MaterialTextBox}"
          Background="#FAFAFA"/>
                    <TextBlock Text="Usuario" 
           FontSize="12" 
           Foreground="{StaticResource OnSurfaceMediumColor}" 
           Margin="2,4,10,4" 
           IsHitTestVisible="False"/>
                </Grid>

                <!-- Contraseña -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="txtContrasena" 
                             Style="{StaticResource MaterialPasswordBox}"
                             Background="#FAFAFA" Grid.ColumnSpan="2"/>
                    <TextBlock Text="Contraseña" 
                           FontSize="12" 
                           Foreground="{StaticResource OnSurfaceMediumColor}" 
                           Margin="0,0,26,8" 
                           IsHitTestVisible="False" Grid.ColumnSpan="2" HorizontalAlignment="Right" Width="191"/>
                    <TextBlock Text="Contraseña" 
                        FontSize="12" 
                        Foreground="{StaticResource OnSurfaceMediumColor}" 
                        Margin="0,72,12,-64" 
                        IsHitTestVisible="False" Grid.ColumnSpan="2"/>
                    <TextBlock Text="Contraseña" 
                        FontSize="12" 
                        Foreground="{StaticResource OnSurfaceMediumColor}" 
                        Margin="0,85,12,-77" 
                        IsHitTestVisible="False" Grid.ColumnSpan="2"/>
                </Grid>
                <!-- Contraseña -->


                <!-- Términos y Condiciones -->
                <CheckBox x:Name="chkTerminos" 
                      FontSize="14" 
                      Foreground="{StaticResource OnSurfaceColor}"
                      Margin="0,0,0,32" 
                      VerticalContentAlignment="Center" Checked="chkTerminos_Checked">
                    <TextBlock Width="260" VerticalAlignment="Top">
                     <Run Text="Acepto los "/>
                     <Run Text="términos y condiciones" Foreground="{StaticResource PrimaryColor}" TextDecorations="Underline" Cursor="Hand"/>
                    </TextBlock>
                </CheckBox>
            </StackPanel>

            <!-- Buttons -->
            <Grid>
                <StackPanel/>
            </Grid>
            <TextBlock Text="Introduce de nuevo la contraseña" 
                        x:Name="txtRepetirContrasena"
                FontSize="12" 
                Foreground="{StaticResource OnSurfaceMediumColor}" 
                Margin="48,48,0,96" 
                IsHitTestVisible="False" HorizontalAlignment="Left" Width="191" Grid.Row="3"/>
            <Button Content="Button" HorizontalAlignment="Left" Height="27" Margin="104,99,0,0" Grid.Row="3" VerticalAlignment="Top" Width="122"/>
            <Button Content="Button" HorizontalAlignment="Center" Height="36" Margin="0,138,0,0" Grid.Row="3" VerticalAlignment="Top" Width="106"/>
            <CheckBox Content="CheckBox" HorizontalAlignment="Left" Height="40" Margin="10,73,0,0" Grid.Row="3" VerticalAlignment="Top" Width="204"/>
        </Grid>
    </Border>



</Window>

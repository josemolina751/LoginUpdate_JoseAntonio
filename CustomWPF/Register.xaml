<Window x:Class="CustomWPF.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomWPF"
        mc:Ignorable="d"
        Title="Register" Height="722" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Window.Resources>
        <!-- Material Design Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="Black"/>
        <SolidColorBrush x:Key="PrimaryDarkColor" Color="#FF23C559"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="OnSurfaceColor" Color="#212121"/>
        <SolidColorBrush x:Key="OnSurfaceMediumColor" Color="#757575"/>

        <!-- Material Design TextBox Style -->
        <Style x:Key="MaterialTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,16,12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Padding="{TemplateBinding Padding}"
                                         VerticalAlignment="Bottom"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design PasswordBox Style -->
        <Style x:Key="MaterialPasswordBox" TargetType="PasswordBox">
            <Setter Property="Height" Value="56"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="12,16,12,8"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource OnSurfaceColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4,4,0,0">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                         Padding="{TemplateBinding Padding}"
                                         VerticalAlignment="Bottom"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design Button Style -->
        <Style x:Key="MaterialButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="4"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.4" BlurRadius="8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.2" BlurRadius="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Material Design Outlined Button Style -->
        <Style x:Key="MaterialOutlinedButton" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D211"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#1976D222"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Window Button Style -->
        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button" BasedOn="{StaticResource WindowButton}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E81123"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#F1707A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>



    <!-- Main Card Container -->
    <Border Background="{StaticResource BackgroundColor}" CornerRadius="8" Margin="24,24,10,0">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="8" Opacity="0.2" BlurRadius="16"/>
        </Border.Effect>

        <Grid Background="{StaticResource SurfaceColor}" Margin="0,-36,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="120"/>
                <RowDefinition Height="38*"/>
                <RowDefinition Height="13*"/>
                <RowDefinition Height="136*"/>
                <RowDefinition Height="244*"/>
                <RowDefinition Height="153"/>
            </Grid.RowDefinitions>





            <!-- Header -->
            <Grid Background="{StaticResource PrimaryColor}" Margin="0,-2,0,0" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="209*"/>
                    <ColumnDefinition Width="193*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="123,0,0,0">
                    <TextBlock Text="Registrate" 
                              FontSize="28" 
                              FontWeight="Light" 
                              Foreground="White" 
                              Width="177"/>
                    <TextBlock Text="Registrate para acceder a la página" 
                              FontSize="14" 
                              Foreground="#FF88887C" 
                              Width="229" Height="18" HorizontalAlignment="Right"/>
                </StackPanel>
                <Image Width="200" Source="/Image/pearphoto.png" RenderTransformOrigin="0.485,1.1" Height="50" Grid.ColumnSpan="2" Margin="101,0,101,101"/>
            </Grid>

            <!-- Form Content -->
            <StackPanel Grid.Row="4" Margin="48,29,48,0" VerticalAlignment="Top" Grid.RowSpan="2" Height="336">
                <!-- Usuario -->
                <Grid Margin="0,0,0,24">
                    <TextBox x:Name="txtUsuarioNuevo" 
                             Style="{StaticResource MaterialTextBox}"
                             Background="#FAFAFA"/>
                    <TextBlock Text="Usuario" 
                              FontSize="12" 
                              Foreground="{StaticResource OnSurfaceMediumColor}" 
                              Margin="12,8,0,0" 
                              IsHitTestVisible="False"/>
                </Grid>
                <!-- Mail -->
                <Grid Margin="0,0,0,24">
                    <TextBox x:Name="txtEmail" 
             Style="{StaticResource MaterialTextBox}"
             Background="#FAFAFA"/>
                    <TextBlock Text="Mail" 
              FontSize="12" 
              Foreground="{StaticResource OnSurfaceMediumColor}" 
              Margin="12,8,0,0" 
              IsHitTestVisible="False"/>
                </Grid>

                <!-- Contraseña -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="txtContrasenaRegistro" 
                                Style="{StaticResource MaterialPasswordBox}"
                                Background="#FAFAFA" Grid.ColumnSpan="2"/>
                    <TextBlock Text="Contraseña" 
                              FontSize="12" 
                              Foreground="{StaticResource OnSurfaceMediumColor}" 
                              Margin="12,8,0,0" 
                              IsHitTestVisible="False" Grid.ColumnSpan="2"/>
                </Grid>

                <!-- Repetir Contraseña -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    <PasswordBox x:Name="txtRepetirContrasena" 
                Style="{StaticResource MaterialPasswordBox}"
                Background="#FAFAFA" Grid.ColumnSpan="2"/>
                    <TextBlock Text="Repetir Contraseña" 
              FontSize="12" 
              Foreground="{StaticResource OnSurfaceMediumColor}" 
              Margin="12,8,0,0" 
              IsHitTestVisible="False" Grid.ColumnSpan="2"/>
                </Grid>



            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="328,0,0,0">
                <Button x:Name="btnMinimize" 
           Style="{StaticResource WindowButton}"
           Content="&#xE921;" 
           Click="btnMinimize_Click" 
           ToolTip="Minimizar"/>
                <Button x:Name="btnClose" 
           Style="{StaticResource CloseButton}"
           Content="&#xE8BB;" 
           Click="btnCerrar" 
           ToolTip="Cerrar"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="6" Margin="48,0,48,0" VerticalAlignment="Center" Height="88">
                <Button x:Name="btnEntrar" 
                       Content="REGISTRATE" 
                       Style="{StaticResource MaterialButton}"
                       Background="{StaticResource PrimaryColor}" 
                       Foreground="White" 
                       Margin="0,0,0,16" 
                       Click="btnEntrar_Click"/>
                <Button x:Name="btnIniciarSesion" 
                       Content="¿Tienes cuenta? INICIA SESIÓN" 
                       Style="{StaticResource MaterialOutlinedButton}"
                       Foreground="{StaticResource PrimaryColor}" 
                       BorderBrush="{StaticResource PrimaryColor}" 
                       Click="btnIniciarSesion_Click"/>
            </StackPanel>
            <CheckBox x:Name="chkTerminos" Content="Acepto los Términos y Condiones" HorizontalAlignment="Left" Height="20" Margin="48,217,0,0" Grid.Row="5" VerticalAlignment="Top" Width="213" RenderTransformOrigin="0.586,-0.234"/>
        </Grid>
    </Border>
</Window>
